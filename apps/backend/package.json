{
  "name": "backend",
  "description": "A grocery shopping app to control how much the user are spending before the end of the shopping event",
  "main": "index.js",
  "repository": "git@github.com:Poli-Labs/grocery-store-backend.git",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main/server.ts",
    "start": "node dist/src/main/server.js",
    "build": "tsup src/main/server.ts --clean --format esm --splitting false",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/infrastructure/repository/drizzle/setup/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.dev.yml down"
  },
  "dependencies": {
    "@clerk/express": "^1.4.14",
    "@prisma/client": "^5.14.0",
    "axios": "^1.7.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "postgres": "^3.4.4",
    "referral-codes": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.1",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.31.9",
    "mockdate": "^3.0.5",
    "prisma": "^5.14.0",
    "tsup": "^8.0.2",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
